@model UserIdentityViewModel

@{
    Layout = "_LoginLayout";
}

<div class="row" style="margin-top:5px">
    <div class="col-md-4 offset-md-4">
        <div class="card card-body bg-light">
            <h4>Enter your credentials to login</h4>
            <form method="post">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="Email">Registered email</label>
                    <input asp-for="Email" type="text" class="form-control" maxlength="250" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" type="password" class="form-control" maxlength="25" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div>
                        <div class="text-danger">@Html.DisplayFor(Model => Model.ErrorMessage)</div>
                        <button id="btnSubmit" type="submit" class="btn btn-success btn-md"><i class="fa fa-unlock" aria-hidden="true"></i> Login</button>
                        <button id="btnCancel" type="reset" class="btn btn-danger btn-md"><i class="fa fa-home" aria-hidden="true"></i> Cancel</button>
                        <button id="btnReset" type="reset" class="btn btn-primary btn-md"><i class="fa fa-ban" aria-hidden="true"></i> Clear</button>
                        <a class="right" href="/logon/forgot"><i class="fa fa-key" aria-hidden="true"></i>Forgot password</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>