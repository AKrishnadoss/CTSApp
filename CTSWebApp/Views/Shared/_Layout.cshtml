        <nav class="navbar navbar-default navbar-fixed-top navbar-expand-md">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar1">
                <span class="navbar-toggler-icon"></span>
            </button>
            <img src="~/img/logo.png" class="py-0" height="40" width="40" alt="Cary Tamil School" />
            <h4 class="pl10 py-0 white" >Cary Tamil School</h4>
            <div class="collapse navbar-collapse" id="navbar1">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <div id="loggedInAs" class="white font-small w90p pr5"></div>
                    </li>
                    <li class="nav-item active">
                        <button type="button" id="loginLink" class="btn btn-success py-0" onclick="onLoginClick()" ><i class="fa fa-unlock" aria-hidden="true"></i> Login</button>
                    </li>
                    <li class="nav-item active">
                        <button type="button" id="logoutLink" class="btn btn-danger py-0 hide" onclick="onLogoutClick()" ><i class="fa fa-sign-out" aria-hidden="true"></i> Logout</button>
