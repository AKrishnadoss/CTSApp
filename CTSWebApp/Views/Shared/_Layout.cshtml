                </ul>
            </div>
        </nav>
    </header>
    @RenderBody()

    <footer class="container-fluid p0">
        <hr />
        <div class="text-center font-small"><strong><i class="fa fa-copyright"></i> @ViewBag.AppName - @DateTime.Now.Year</strong></div>
    </footer>

